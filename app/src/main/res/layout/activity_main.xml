<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hw.mad.hw03.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_view_welcome"
        android:id="@+id/txtViewWelcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_exit"
        android:id="@+id/button_exit"
        android:layout_marginBottom="83dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:onClick="exit" />


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_start_trivia"
        android:id="@+id/button_start_trivia"
        android:layout_alignTop="@+id/button_exit"
        android:layout_alignRight="@+id/txtViewWelcome"
        android:layout_alignEnd="@+id/txtViewWelcome"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:onClick="startTrivia" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar_loading"
        android:layout_alignTop="@+id/image_view_trivia"
        android:layout_toRightOf="@+id/button_exit"
        android:layout_toEndOf="@+id/button_exit" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_trivia"
        android:layout_below="@+id/txtViewWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/text_loading_ready"
        android:layout_above="@+id/button_exit"
        android:layout_toRightOf="@+id/button_exit"
        android:layout_toEndOf="@+id/button_exit"
        android:layout_marginBottom="80dp"
        android:textStyle="bold"/>

</RelativeLayout>
